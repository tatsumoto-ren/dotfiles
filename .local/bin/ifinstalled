#!/bin/sh

# Some scripts require programs not installed by default.
# I use this little script to check to see if a command exists and if it doesn't
# it informs the user that they need that command to continue.

for x in "$@"; do
	if ! which "$x" >/dev/null 2>&1 && ! pacman -Qq "$x" >/dev/null 2>&1; then
		echo "Error: $x must be installed for this function." >&2
		notify-send -u critical "ðŸ“¦ $x" "$x must be installed for this function."
		exit 1
	fi
done
