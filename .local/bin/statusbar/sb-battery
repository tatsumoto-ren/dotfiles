#!/bin/bash

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ðŸ”Œ for plugged up, ðŸ”‹ for discharging on battery, etc.).

get_discharging_status() {
	local -r battery=$1
	local -r capacity=$(cat -- "$battery/capacity" 2>&1)
	if ((capacity >= 90)); then
		echo ï‰€
	elif ((capacity >= 60)); then
		echo ï‰
	elif ((capacity >= 40)); then
		echo ï‰‚
	elif ((capacity >= 10)); then
		echo ï‰ƒ
	elif ((capacity >= 0)); then
		echo ï‰„
	else
		echo ERR
	fi
}

get_status() {
	local -r battery=$1
	case $(cat -- "$battery/status" 2>&1) in
	"Full") echo ï‰€ ;;
	"Charging") echo ï‡¦ ;;
	"Not charging") echo ïŠœ ;;
	"Unknown") echo â™»ï¸ ;;
	"Discharging") get_discharging_status "$battery" ;;
	*) echo ERR ;;
	esac
}

screen_brightness() {
	xbacklight -get | awk '{printf "%.1f",$0}'
}

case $BLOCK_BUTTON in
1) notify-send "Screen brightness" "$(screen_brightness)%" &;;
3) notify-send "Battery module" "ðŸ”‹: discharging
ðŸ›‘: not charging
â™»: stagnant charge
ðŸ”Œ: charging
âš¡: charged
â—: battery very low!
- Scroll to change adjust xbacklight." &;;
4) xbacklight -inc 10 ;;
5) xbacklight -dec 10 ;;
6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Loop through all attached batteries and format the info
for battery in /sys/class/power_supply/BAT?*; do
	if [[ -d $battery ]]; then
		printf -- '%s %d%% ' \
			"$(get_status "$battery")" \
			"$(cat -- "$battery/capacity" 2>&1)"
	fi
done | sed 's/ *$/\n/'
