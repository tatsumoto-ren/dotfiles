#!/bin/bash

# Status bar module for disk space

readonly DIR="${BLOCK_INSTANCE:-/}"

notify_stats() {
	local -r stats=$(
		df -hl --output=target,used,size,pcent -x devtmpfs -x tmpfs -x efivarfs |
			sed 's/^\/home.*$/<b><span color=\"white\">&<\/span><\/b>/'
	)
	local -r swap_stats=$(
		{
			printf -- "Device\tUsed\tSize\tUse%%\n"
			swapon -s |
				sed '1d' |
				awk '{ printf "%s\t%0.2fG\t%0.2fG\t%d%\n", $1, $4 / 1024 / 1024, $3 / 1024 / 1024, $4 / $3 * 100; }';
		} | column -t -s$'\t'
	)
	setsid -f notify-send -t 30000 " Disk space" "$stats\n\n$swap_stats" &
}

case $BLOCK_BUTTON in
1) notify_stats ;;
3) setsid -f "$TERMINAL" -e ncdu "$DIR" ;;
6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

df -h "$DIR" --output=avail,pcent,target | awk '
/[0-9]/ {
	if ($3 ~ "/home") {
		dir_icon=""
	} else {
		dir_icon=""
	}

	print $3 " " $1
	print dir_icon " " $1

	# convert usage percent to integer
	gsub("%", "", $2)
	$2 = int($2)

	# color
	if ($2 > 90) {
		print("#FF0000")
	} else if ($2 > 80) {
		print("#FFAE00")
	} else if ($2 > 70) {
		print("#FFF600")
	}
	exit
}'
