#!/bin/sh

# Show wifi ğŸ“¶ and percent strength or ğŸ“¡ if none.
# Show ğŸŒ if connected to ethernet or â if none.
# Show ğŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
1)
	"$TERMINAL" -e nmtui
	pkill -RTMIN+4 "${STATUSBAR:-i3blocks}"
	;;
3)
	notify-send "ğŸŒ Internet module" "\- Click to connect
âŒ: wifi disabled
ğŸ“¡: no wifi connection
ğŸ“¶: wifi connection with quality
â: no ethernet
ğŸŒ: ethernet working
ğŸ”’: vpn is active
" &
	;;
6)
	"$TERMINAL" -e "$EDITOR" "$0"
	;;
esac

wifi_status() {
	if [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ] ; then
		awk '/^\s*w/ { printf "ï‡« %d%\n", int($3 * 10 / 7) }' /proc/net/wireless
	elif [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'down' ] ; then
		if [ "$(cat /sys/class/net/w*/flags 2>/dev/null)" = '0x1003' ];then
			echo ğŸ“¡
		else
			echo âŒ
		fi
	fi
}

ethernet_status() {
	if [ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ]; then
		echo ğŸŒ
	else
		echo â
	fi
}

vpn_status() {
	if [ -n "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" ];then
		echo ğŸ”’
	fi
}

printf -- '%s%s%s\n' \
	"$(wifi_status)" \
	"$(ethernet_status)" \
	"$(vpn_status)" |
	sed 's/^ *\| *$//g'
