#!/bin/sh

filter() {
	input="$(cat - | sed '/^volume:/d; s/\&/&amp;/g; s/ *$//')"
	songname="$(echo "$input" | head -1)"

	if [ -z "$songname" ]; then
		echo " Stopped"
		echo ""
		echo "#888888"
		return
	fi

	if echo "$input" | tail -1 | grep -q 'playing'; then
		echo " $songname"
		echo " $songname" | colrm 30
	else
		echo "<span color=\"gray\" font_style=\"italic\"> $songname</span>"
		echo "<span color=\"gray\" font_style=\"italic\">$(echo " $songname" | colrm 30 )</span>"
	fi
}

{ pidof -x sb-mpdup || setsid -f sb-mpdup ;} >/dev/null 2>&1 &

case $BLOCK_BUTTON in
	1)	# left click, launch ncmpcpp
		mpc status | filter ;
		i3-msg -q exec "i3-sensible-terminal -e ncmpcpp -s playlist" ;;

	3)	# right click, pause/unpause
		mpc toggle | filter ;;

	4)	# scroll up, previous
		mpc prev   | filter ;;

	5)	# scroll down, next
		mpc next   | filter ;;

	6)	# edit
		mpc status | filter ;
		i3-msg -q exec "i3-sensible-terminal -e \"$EDITOR -- $0\"" ;;

	*)
		mpc status | filter ;;
esac
