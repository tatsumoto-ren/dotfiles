#!/bin/sh

# View files with nsxiv and and select them in lf.

readonly first_file="$1"
exe=$(basename -- "$0")
readonly exe

where_is_sxiv() {
	for cmd in nsxiv sxiv; do
		command -v "$cmd" >/dev/null 2>&1 && echo "$cmd"
	done
	echo "sxiv is not found in this system." >&2
	exit 1
}

if ! [ -f "$first_file" ]; then
	notify-send "$exe" "first arg is not a file!"
	exit 1
fi

if [ -z "$id" ]; then
	notify-send "$exe" "lf id is not set!"
	exit 1
fi

rotdir "$first_file" |
grep -i "\.\(png\|jpg\|jpeg\|gif\|webp\|avif\|tif\|ico\)\(_large\)*$" |
"$(where_is_sxiv)" -aio 2>/dev/null |
while read -r file; do
	if [ -n "$file" ]; then
		lf -remote "send $id select  \"$file\"  "
		lf -remote "send $id toggle"
	fi
done
