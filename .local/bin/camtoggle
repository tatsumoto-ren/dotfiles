#!/bin/sh

if ! pkill -f /dev/video; then
	setsid -f mpv \
	--no-osc \
	--no-input-default-bindings \
	--input-conf=/dev/null \
	--geometry=-0-0 \
	--autofit=30% \
	--title="mpvfloat" \
	--profile=low-latency \
	--untimed \
	--no-cache \
	"$(ls /dev/video* | head -n 1)"
	notify-send "Camtoggle" "Launched."
else
	notify-send "Camtoggle" "Killed."
fi
