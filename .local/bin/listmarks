#!/bin/bash

set -euo pipefail

urldecode() {
    local url
    url=$(cut -f1 -d' ')
    url=${url//file:\/\//}
    url=${url//+/ }
    url=${url//%/\\x}
    printf -- '%b\n' "$url"
}

if [[ $* =~ ^(dirs|files)$ ]]; then
	sed \
		-e 's/\s*#.*$//' \
		-e '/^\s*$/d' \
		-e 's/^\S*\s*//' \
		"${XDG_CONFIG_HOME:-$HOME/.config}/shell/bm-$*" |
	while read -r line; do
		eval "echo $line"
	done
	if [[ $* == dirs ]]; then
		urldecode < "${XDG_CONFIG_HOME:-$HOME/.config}/gtk-3.0/bookmarks"
	fi
fi | sort -u
