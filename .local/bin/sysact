#!/bin/bash

# A dmenu wrapper script for system functions.

ctl() {
	case $(readlink -f /sbin/init) in
	*systemd*) echo systemctl ;;
	*) echo loginctl ;;
	esac
}

ask_action() {
	cat <<-EOF | dmenu -l 30 -i -p "Action:"
		ðŸ”’ lock screen
		ðŸšª leave ${WM:-i3}
		â™»ï¸ renew ${WM:-i3}
		ðŸ”ƒ reboot
		ðŸ–¥ï¸ shutdown
		ðŸ’¤ sleep
		ðŸ» hibernate
		ðŸ“º display off
	EOF
}

background_color() {
	{
		xrdb -query -all | awk -F'#' '/background:|color0:/{print $2; exit;}'
		echo 1d2021
	} | head -1
}

display_off() {
	xset dpms force off
}

lock_screen() {
	mpc pause || true
	i3lock -e -f -c "${1:-$(background_color)}"
	display_off
}

cleanup() {
	for app in qbittorrent goldendict; do
		killall "$app"
	done
	sleep '0.33s'
}

main() {
	sync
	case ${*:-$(ask_action)} in
	*lock*)
		lock_screen
		;;
	*leave*)
		i3-msg -q exit || kill -TERM "$(pgrep -u "$USER" "\bdwm$")"
		;;
	*renew*)
		i3-msg -q restart || kill -HUP "$(pgrep -u "$USER" "\bdwm$")"
		;;
	*hibernate*)
		lock_screen ee4b2b
		$(ctl) hibernate
		;;
	*sleep* | *suspend*)
		lock_screen ee4b2b
		$(ctl) suspend
		;;
	*reboot*)
		cleanup
		$(ctl) reboot -i
		;;
	*shutdown* | *poweroff*)
		cleanup
		$(ctl) poweroff -i
		;;
	*'display off'*)
		display_off
		;;
	*)
		exit 1
		;;
	esac
}

main "$@"
